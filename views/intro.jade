    script(type='text/javascript').
      jQuery(document).ready(function () {
      jQuery.supersized({
      // Functionality
      slide_interval          :   10000,    // Length between transitions
      transition              :   1,      // 0-None, 1-Fade, 2-Slide Top, 3-Slide Right, 4-Slide Bottom, 5-Slide Left, 6-Carousel Right, 7-Carousel Left
      transition_speed    : 1000,
      keyboard_nav            :   1,
      // Speed of transition
      // Components
      slide_links       : 'blank',  // Individual links for each slide (Options: false, 'num', 'name', 'blank')
      slides          :   [     // Slideshow Images
      {image : '../images/backgrounds/#{currentGame}/1.jpg',  thumb : '../images/backgrounds/#{currentGame}/1.jpg', url : ''} ,
      {image : '../images/backgrounds/#{currentGame}/2.jpg',  thumb : '../images/backgrounds/#{currentGame}/2.jpg', url : ''} ,
      {image : '../images/backgrounds/#{currentGame}/3.jpg',  thumb : '../images/backgrounds/#{currentGame}/3.jpg', url : ''} ,
      {image : '../images/backgrounds/#{currentGame}/4.jpg', thumb : '../images/backgrounds/#{currentGame}/4.jpg', url : ''} ,
      {image : '../images/backgrounds/#{currentGame}/5.jpg', thumb : '../images/backgrounds/#{currentGame}/5.jpg', url : ''}]
      });
      }
      );
    #wrap.clearfix.no-sidebar
      #main.portfolio
        #entries
          h2.page-title
            | Introduction 
            span#entries-toggle Toggle
            #breadcrumb
              p.breadcrumb
                span.breadcrumb_info
                a(href='/') Home
                span.arrow  » 
                a(href='/#{currentGame}') #{gameName}
                span.arrow  » 
                span.current_crumb  Introduction
            // [/breadcrumb]
          #entries-box
            .post-item
              .entry
                p
                  | In this section you can find a brief review about the game  along with some screenshots and a video.
                .fix
              // [/entry]
            // [/post-item]
            #portfolio
              .entry
                .folio-box.clearfix
                  .flexslider.portfolio-item-slideshow
                    ul.slides
                      li
                        .frame
                          a(href='#{gameInfo[0].image1}', title='screen 1', rel='prettyPhoto[gallery-a]')
                            img(width='820', height='600', src='#{gameInfo[0].image1}', alt='screen 1')
                            span.zoom
                      li
                        .frame
                          a(href='#{gameInfo[0].image2}', title='screen 2', rel='prettyPhoto[gallery-a]')
                            img(width='820', height='600', src='#{gameInfo[0].image2}', alt='screen 2')
                            span.zoom
                      li
                        .frame
                          a(href='#{gameInfo[0].image3}', title='screen 3', rel='prettyPhoto[gallery-a]')
                            img(width='820', height='600', src='#{gameInfo[0].image3}', alt='screen 3')
                            span.zoom
                    // [/slides]
                  // [/flexslider]
                  .portfolio-info
                    h3.folio-title
                      a(title='Aliquam tincidunt mauris', href='#') Screens of the game
                    .folio-cats
                      a(href='#') #{gameInfo[0].name}
                    p
                      | #{gameInfo[0].description}
                  // [/portfolio-info]
                // [/folio-box]
                .divider
                .videox
                  iframe(title='YouTube video player', width='550', height='400', src='#{gameInfo[0].videoUrl}', webkitallowfullscreen='', mozallowfullscreen='', frameborder='0', allowfullscreen='')
                // [/videox]                
                .navi
                  .wp-pagenavi
                    span.pages Page 1 of 1
                    span.current 1
                // [/navi]
